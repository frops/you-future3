{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}
{% block seoDescr %}{{ post.seoDescr | e }}{% endblock %}
{% block seoKeywords %}{{ post.seoKeywords | e }}{% endblock %}
{% block ogType %}article{% endblock %}

{% block og %}
    <meta property="article:author" content="Ильдар Асанов"/>
    <meta property="article:published_time" content="{{ post.date.format('Y-m-d') }}"/>
{% endblock %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">{{ post.title | e }}</h1>
            {% if post.subTitle != "" %}
                <subtitle class="lead text-muted">{{ post.subTitle | e }}</subtitle>
            {% endif %}
        </div>
    </section>

    <div class="album">
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="bar">
                        <div class="date">
                            <span>{{ post.date.format('Y-m-d') }}</span></div>
                        <div class="counter">
                            <span>{{ post.viewed }}</span></div>
                    </div>
                    <article class="article_content">
                        {{  post.getHtmlContent | raw}}
                        <br>
                        <a href="https://you-future.ru{{ app.request.getBaseUrl ~ app.request.getPathInfo }}">Читать на сайте</a>
                    </article>
                </div>
            </div>
        </div>
    </div>
{% endblock %}